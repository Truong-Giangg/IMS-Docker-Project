<?xml version="1.0" encoding="UTF-8"?>
<DiameterPeer
    FQDN="hss.ims.local"
    Realm="ims.local"
    Vendor_Id="10415"
    Product_Name="JavaDiameterPeer"
    AcceptUnknownPeers="1"
    DropUnknownOnDisconnect="1"
    Tc="30"
    Workers="8"
    QueueLength="32"
    TransactionTimeout="3600"
    SessionsHashSize="128"
    DefaultAuthSessionTimeout="3600"
    MaxAuthSessionTimeout="3600">

    <!-- HSS listens on the standard Diameter port -->
    <Acceptor port="3868" bind="0.0.0.0"/>

    <!-- Peers (use the same FQDNs and ports your Kamailio XMLs advertise) -->
    <Peer FQDN="pcscf.ims.local" Realm="ims.local" port="3871"/>
    <Peer FQDN="icscf.ims.local" Realm="ims.local" port="3869"/>
    <Peer FQDN="scscf.ims.local" Realm="ims.local" port="3870"/>

    <!-- 3GPP Cx application -->
    <Auth id="16777216" vendor="10415"/>

    <!-- Supported vendors -->
    <SupportedVendor vendor="10415"/>

    <!-- Optional default route to one of the peers -->
    <DefaultRoute FQDN="icscf.ims.local" metric="10"/>
</DiameterPeer>
